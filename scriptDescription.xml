<VideoScript>
    <Version>1</Version> <!-- to make sure the vid gen or editor supports it
                            Throw a warning and attempt to upgrade if the 
                            script is an older version, Continue transparently
                            if possible. Save a backup of the original script 
                            after a successful upgrade. Throw am error on
                            a failed upgrade-->
    <Info> <!-- Relevent creation data. Should mirror podcast metadata-->
        <Title></Title>
        <SubTitle></SubTitle>
        <Genre></Genre>
        <Author></Author>
        <Description></Description>
        <Date></Date>
        <Time></Time>
        <etc></etc> <!-- unknown tags should be ignored -->
    </Info>

    <!-- Globals section - Default values for Clips. Every clip may override the default -->
    <Defaults>
        <!-- Default background color for the video -->
        <BackgroundColor>#000000</BackgroundColor> <!-- Optional. default is #000 -->
        
        <!-- Background music file for the video -->
        <BackgroundMusic>music.mp3</BackgroundMusic> <!-- Optional -->
        
        <!-- Specify whether the background music should be looped -->
        <LoopBGM>true</LoopBGM> <!-- Optional, default is true -->
        
        <!-- Volume level for the background music -->
        <BackgroundVolume>5%</BackgroundVolume> <!-- Optional, default is 5% -->
        <MaxDuration type="crop">10</MaxDuration> <!-- Duration override forces a duration. Optional. The default is the natural length of all media sources combined. type can be crop or stretch -->
            
            <!-- Transition type for the transition into the next clip -->
        <TransitionType>fade</TransitionType> <!-- Optional -->
        <TransitionTime>1.0</TransitionTime>
        <Resolution>1920x1080</Resolution>
    </Defaults>
    
    <!-- Clips section -->
    <Clips>
        <Chapter name="My Name">
            <Defaults> <!-- Any defaults may be ovverriden for the chapter -->
                <!-- Default background color for the chapter -->
                <BackgroundColor>#F00</BackgroundColor> <!-- Optional. default is #000 -->
                <!-- Transition type for the transition into the chapter -->
                <TransitionType>swipeleft</TransitionType> <!-- Optional -->
                <TransitionTime>1.0</TransitionTime>
            </Defaults>
            <Info> <!-- Relevent Chapter metadata.Any tag may or may not exist -->
                <!--These tags will be for the chapter metadata -->
                <Title>Title Here</Title> 
                <Description>Description of the chapter</Description>
            </Info>
            <Clip>
                <Media type="Video">
                    <FilePath>myname.mp4</FilePath> <!-- Mandatory -->
                    <Position>fill</Position>
                    <Duration>-1</Duration>
                </Media> 
            </Clip>
        </Chapter>
        <!-- Specify one or more clips in the video -->
        <Clip><!-- A clip may include any of at least one media type that has 
                a duration. if No start time is provided in a media source,
                play it sequentially after the previous media source ends
                Duration of the clip throw a warning -->
            <Properties>
                <Duration type="crop">10</Duration> <!-- Duration override forces a duration. Optional. The default is the natural length of all media sources combined. type can be crop or stretch -->
                
                <!-- Transition type for the transition into the next clip -->
                <TransitionType>fade</TransitionType> <!-- Optional -->
                
                <!-- Transition duration for the transition into the next clip -->
                <TransitionTime>2</TransitionTime> <!-- Optional -->
            </Properties>
            <!-- Video file to be included in the clip -->
            <Media type="Video">
                <FilePath>video.mp4</FilePath> <!-- Mandatory -->
                <Description>media description</Description>i <!-- used to find the media -->
                <Script>SCRIPT TEXT HERE</Script><!-- Optional - for CC or subtitles -->
                <StartTime>0</StartTime> <!-- Optional default is 0 -->
                <Duration>-1</Duration> <!-- Mandatory use -1 for media's natural length -->
                <Volume>100</Volume> <!-- Optional, default is 100 --> 
                <Position>bottomleft</Position> <!-- all media types with a visual part may have this property. Positions may Aspect, Stretch, Fill, TopLeft, TopRight, BottomLeft, BottomRight or XxY,WxH. default is Aspect  X, Y, W, H may be percentages.-->
            </Media>
            
            <!-- Image file to be included in the clip -->
            <Media type="Image">
                <FilePath>image.jpg</FilePath> <!-- Mandatory -->
                <Script>SCRIPT TEXT OR NOTES HERE</Script><!-- Optional - for CC or subtitles. encase in brackets. -->
                <Description>About the image</Description> <!-- all media types may have a description -->
                <StartTime>2</StartTime> <!-- Optional -->
                <Duration>6</Duration> <!-- Required   -1 is the full length of the clip-->
                <Position>TopRight</Position>
                <filters>   <!-- filters may apply to any media type. individual filters can be for audio and/or visual media. Unsupported filters will be ignored and throw a warning. -->
                    <drawtext> <!-- only for visual media -->
                        <Text>Overlay text</Text> <!-- Mandatory - added to CC or sub in brackets. -->
                        <StartTime>4</StartTime> <!-- Optional default is 0-->
                        <Duration>-1</Duration><!-- -1 is full length of media default is -1-->
                        <FontSize>24</FontSize> <!-- Optional default is 24-->
                        <FontColor>#FFFFFF</FontColor> <!-- Optional -->
                        <FontFace>Arial</FontFace> <!-- Optional -->
                        <BorderColor>#000</BorderColor> <!-- Border outline color -->
                        <BorderWidth>3</BorderWidth>
                    </drawtext>
                </filters>
            </Media>
              
            <!-- Audio file to be included in the clip -->
            <Media type="Audio">
                <FilePath>audio.mp3</FilePath> <!-- Mandatory -->
                <Script>SCRIPT TEXT HERE</Script><!-- Optional - for CC or subtitles -->
                <Voice></Voice> <!-- Which voice to use. -->
                <StartTime>0</StartTime> <!-- Optional -->
                <Duration>-1</Duration>
                <Volume>100</Volume> <!-- Optional, default is 100 -->
            </Media>
            
            <!-- Text-to-speech content to be converted to audio -->
            <Media type="TTS">
                <Script>Hello, world!</Script> <!-- Mandatory -->
                <StartTime>1</StartTime> <!-- Optional -->
                <Duration>-1</Duration> <!-- Mandarory -->
                <FilePath>tts_audio1.wav</FilePath> <!-- Optional auto-generate with a unique predictable filename such as an md5sum the <Script> content.--> 
                <UseForCC>False</UseForCC> <!-- Optional all media types may have this. default is True. `-->
                <Volume>100</Volume> <!-- Optional, default is 100 -->
            </Media>
            
            <!-- A clips can be used as a media type. 
                Recursively create and join clips into a video to include-->
            <Media type="Clips"><!-- ignore empty or incomplete media, clips and clips lists. only throw a warning -->.
            </Media>

            <Media type="Unknown"><!-- ignore unknown media types. only throw a warning -->.
            </Media>
        </Clip>
        <!-- Add more clips as needed -->
    </Clips> <!-- Upon completion of rendering, Display a nicely formatted warning and error log -->
</VideoScript>


